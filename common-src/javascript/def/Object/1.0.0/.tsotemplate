<template id="template">
	<style>
		:host {

			/*変数*/
			--bc-cl: white;

			--bd-cl: black;
			--bd-wei: 1px;
			--bd-tp: solid;

			--black: rgb(0, 0, 0);
			--black-re: rgb(200, 200, 200);
			--red: rgb(255, 0, 0);
			--red-re: rgb(255, 200, 200);
			--blue: rgb(0, 0, 255);
			--blue-re: rgb(200, 200, 255);
			--green: rgb(0, 255, 0);
			--green-re: rgb(200, 255, 200);
			--yellow: rgb(255, 255, 0);
			--yellow-re: rgb(255, 255, 200);

			/*装飾*/
			position: absolute;
			display: block;
			cursor: default;
			opacity: 1;
		}

		&:host(.allow-hover:hover) {
			cursor: pointer;
			opacity: 0.75;
		}

		/*座標指定の際に要素をどれぐらいずらすか*/
		&:host([position-type*="l"]) {
			transform: translateX(0%);
		}

		&:host([position-type*="cx"]) {
			transform: translateX(-50%);
		}

		&:host([position-type*="r"]) {
			transform: translateX(-100%);
		}

		&:host([position-type*="t"]) {
			transform: translateY(0%);
		}

		&:host([position-type*="cy"]) {
			transform: translateY(-50%);
		}

		&:host([position-type*="b"]) {
			transform: translateY(-100%);
		}
	</style>
</template>